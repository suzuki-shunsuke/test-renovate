{
  extends: [
    "config:base",
    "github>suzuki-shunsuke/renovate-config:nolimit#1.1.0",
  ],
  packageRules: [
    {
      // Group Docker image's golang and GitHub Actions' go-version
      matchPackagePatterns: ["^golang"],
      groupName: "golang",
    },
  ],
  regexManagers: [
    {
      fileMatch: [
        "^\\.github/workflows/.*\\.ya?ml$",
        "^\\.github/actions/.*\\.ya?ml$",
      ],
      depNameTemplate: "golang/go",
      datasourceTemplate: "github-tags",
      extractVersionTemplate: "^go(?<version>.*)$",
      matchStrings: [
        "go-version: (?<currentValue>.*)",
        "go-version: '(?<currentValue>.*)'",
        'go-version: "(?<currentValue>.*)"',
      ],
    },
  ],
}
